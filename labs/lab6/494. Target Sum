class Solution {
    int findHelp(vector<int>& nums, int idx, int S) {
        if (idx == nums.size()) return S==0?1:0;
        return findHelp(nums, idx+1, S-nums[idx])+findHelp(nums, idx+1, S+nums[idx]);
    }
public:
    int findTargetSumWays(vector<int>& nums, int S) {
        return findHelp(nums, 0, S);
    }
};